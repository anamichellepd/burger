<h1>Get your burgers!</h1>

<h2>Yummy burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>This burger has been devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Devoured?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Devoured<br>
        <input type="radio" name="sleepy" value="0"> New Burger
    </div>

    <button type="submit">Add Burger</button>
</form>