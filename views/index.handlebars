<h1>Get your burgers!</h1>

<h2>Yummy burgers!</h2>
<div class="container">

    <div class="col">
        <div class="row">
            <h2>Burgers you haven't eaten!</h2>
        </div>
        <div class="row">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="col">
        <div class="row">
            <h2>DEVOURED burgers!</h2>
        </div>
        <div class="row">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <br>
        <br>

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured<br>
                <input type="radio" name="devoured" value="0"> New Burger
            </div>

            <button type="submit">Add Burger</button>
        </form>